# .env.example - Rename this file to .env and fill in your values

# Telegram Bot Token (from BotFather)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# AstronFy Bot Username (for subscription redirection)
ASTRONFY_BOT_USERNAME=your_astronfy_bot_username_here

# AstronFy VIP Group ID (for reference, if needed by AstronFy or future RemBOT features)
ASTRONFY_VIP_GROUP_ID=your_astronfy_vip_group_id_here

# Your Telegram User ID for admin commands (get it from a bot like @userinfobot)
ADMIN_TELEGRAM_ID=your_telegram_user_id_here

# PostgreSQL Database Configuration
POSTGRES_DB=rembot_db
POSTGRES_USER=rembot_user
POSTGRES_PASSWORD=rembot_password

# LLM Configuration
# Ensure this matches the filename of your downloaded GGUF model in the ./models directory
LLM_MODEL_FILENAME=mythomist-7b.gguf
LLM_N_THREADS=4 # Number of vCPUs on your VM
LLM_N_CTX=4096 # Context window size for the LLM (e.g., 2048, 4096)

# Embedding Model for Memory Worker
# Example: all-MiniLM-L6-v2, paraphrase-MiniLM-L6-v2
EMBEDDING_MODEL_NAME=all-MiniLM-L6-v2