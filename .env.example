# .env.example - Rename this file to .env and fill in your values

# Telegram Bot Token (from BotFather)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Stripe API Keys (from Stripe Dashboard)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PRODUCT_PRICE_ID=price_your_stripe_price_id_here

# Telegram Payment Provider Token (from BotFather after connecting Stripe)
TELEGRAM_PAYMENT_PROVIDER_TOKEN=your_telegram_payment_provider_token_here

# PostgreSQL Database Configuration
POSTGRES_DB=rembot_db
POSTGRES_USER=rembot_user
POSTGRES_PASSWORD=rembot_password

# LLM Configuration
# Ensure this matches the filename of your downloaded GGUF model in the ./models directory
LLM_MODEL_FILENAME=mythomist-7b.gguf
LLM_N_THREADS=4 # Number of vCPUs on your VM
LLM_N_CTX=4096 # Context window size for the LLM (e.g., 2048, 4096)

# Embedding Model for Memory Worker
# Example: all-MiniLM-L6-v2, paraphrase-MiniLM-L6-v2
EMBEDDING_MODEL_NAME=all-MiniLM-L6-v2
